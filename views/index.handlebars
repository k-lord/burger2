<img src="/images/burgerimg2.png">

<div id="main-form" class="rounded-pill">
    <h3>Add a Burger You Really Wanna Eat</h3>
    <form class="burger-form">

        <div class="form-group">
            <label for="ca">Type of Burger:</label>
            <input type="text" id="burg" name="name">
            <button type="submit" class="btn btn-warning" id="add-burg">ADD BURGER</button>
        </div>
    </form>

</div>

<div class="container flex-wrap">
    <div class="row">
        <div class="col-sm">
            <h4>Burgers to eat!</h4>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h4>Burgers already eaten!</h4>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>